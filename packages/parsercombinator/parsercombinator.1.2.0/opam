build: [
  ["./configure" "--prefix=%{prefix}%"]
  [make]
  [make "doc"] {with-doc}
  [make "check"] {with-test}
]
install: [make "install"]
remove: ["ocamlfind" "remove" "parsercombinator"]
depends: [
  "ocamlfind" {build}
  "batteries" {>= "3.0.0"}
  "ounit" {with-test}
  "portia" {build & >= "1.0"}
  "lwt"
  "lwt_ppx"
]
